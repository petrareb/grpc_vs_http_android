<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityTitle">
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppNameActivityMain">
        <item name="android:textSize">35dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">#4e5b66</item>
    </style>

    <style name="ButtonActivityMain" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">#009688</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:topLeftRadius">10dp</item>
    </style>


    <style name="itemListingGroup">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="itemListingLabel_name">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemListingLabel_codename">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="not_found">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>